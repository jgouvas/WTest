<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="WTest"
        android:textColor="@color/black"
        android:textSize="70dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/navigate_articles_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="150dp"
        android:text="See articles"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Funcionalidade 3:"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@id/navigate_articles_button"
        app:layout_constraintStart_toStartOf="@id/navigate_articles_button" />

</androidx.constraintlayout.widget.ConstraintLayout>